<h1>Listing clients
    <%= link_to 'New Client', new_client_path ,:class => "btn btn-small"%>
</h1>
<hr>
<div class="scroll-tab">
  <table class="table table-bordered table-hover">
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th colspan=3>Accion</th>
    </tr>

  <% @clients.each do |client| %>
    <tr>
      <td><%= client.name %></td>
      <td><%= client.pais %></td>
      <td><%= link_to 'Show Holidays', client %></td>
      <td><%= link_to 'Edit client', edit_client_path(client) %></td>
      <td><%= link_to 'Destroy client', client, :method => :delete, :data => { :confirm => 'Are you sure?'
       } %></td>
    </tr>
  <% end %>
  </table>
</div>
